# =================================================================
# IMPORTANT: Replace all placeholder values with your own secure values
# =================================================================

# MongoDB Connection - REPLACE with your own database
MONGO_URL=mongodb://localhost:27017
# OR for MongoDB Atlas:
# MONGO_URL=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/?retryWrites=true&w=majority&appName=YourApp
DB_NAME=resona

# JWT Secret - GENERATE A NEW ONE: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# NEVER use the default value below in production!
JWT_SECRET=GENERATE_YOUR_OWN_128_CHARACTER_RANDOM_SECRET_HERE_NEVER_USE_DEFAULT

# Server Configuration
PORT=5000
NODE_ENV=development

# Admin Registration Secret - CHANGE THIS!
ADMIN_SECRET_CODE=YOUR_SECURE_ADMIN_CODE_2025

# Security Settings
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIRECTORY=uploads

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000
